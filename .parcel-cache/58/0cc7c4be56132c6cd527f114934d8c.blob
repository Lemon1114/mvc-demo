.app2 {
}
.app2 div {
  width: 100%;
}
.app2 .tab-bar {
  width: 100%;
  display: flex;
}
.app2 .tab-bar > li {
  width: 50%;
  border: 1px solid #000;
}
.app2 .tab-bar > li.active {
  border: none;
  background-color: rgb(247, 124, 9);
}
.app2 .tab-content > li {
  display: none;
}
.app2 .tab-content > li.active {
  display: block;
  background-color: rgb(247, 124, 9);
}
